{
  "name": "fashion-ecommerce-server",
  "version": "1.0.0",
  "description": "Unified backend for Fashion Ecommerce - Admin API (/api/admin/*) & User API (/api/*)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:admin": "ts-node-dev --respawn --transpile-only src/adminServer.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js"
  },
  "author": "",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node -r dotenv/config prisma/seed.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@prisma/client": "^5.22.0",
    "@types/nodemailer": "^7.0.4",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "nodemailer": "^7.0.12",
    "prisma": "^5.22.0",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^18.15.11",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
